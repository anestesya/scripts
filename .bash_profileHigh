#High Rick Sanchez PS1 Theme for Terminal in OSX and Linux

#OSX Tricks
# Get macOS Software Updates, and update installed Homebrew, npm, and their installed packages
alias update='sudo softwareupdate -i -a; brew update; brew upgrade; brew cleanup; npm install npm -g; npm update -g;'

# Get week number
alias week='date +%V'

#to get more interesting OSX System command aliases to help you to maintainence your PC
#visit github file: https://github.com/mathiasbynens/dotfiles/blob/main/.aliases

alias g="git"

# Enable tab completion for `g` by marking it as an alias for `git`
if type _git &> /dev/null; then
	complete -o default -o nospace -F _git g;
fi;

#Define um comando de git aqui.
_ps1_git() {
  if command -v __git_ps1 >/dev/null 2>/dev/null ; then
    if [[ "$__LOCAL_GIT_STATUS" =~ On\ branch\ ([^[:space:]]+) ]]; then
      branch=${BASH_REMATCH[1]}
      test "$branch" != master || branch=' '
    else
      branch="(`git describe --all --contains --abbrev=4 HEAD 2> /dev/null || echo HEAD`)"
    fi
    printf "$(__git_ps1)"
  fi
  return 0
}

#Mostra no Git onde estamos
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

#GIT PS1 THEMA
gitPS1='\[\033[0;32m\]\[\033[0m\033[0;32m\]$(parse_git_branch)\[\033[0;36m\] @\[\033[0;36m\]\w\[\033[0;32m\]$(_ps1_git)\n\[\033[0;32m\]â””â”€\[\033[0m\033[0;32m\] \$\[\033[0m\033[0;32m\] â–¶\[\033[0m\] '



#SH High

#Mostra no Git onde estamos
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

cbbong='\033[32m[ğŸš¬_\|/_ğŸš¬ \$(parse_git_branch) @\n\033[35m:\w\033[32m]$\033[0m(ğŸŒ¿âš—ï¸)'
cbjoint='\033[32m[ğŸš¬@\n\033[35m:\w\033[32m]$\033[0m(ğŸŒ¿ğŸš¬)'
cbhigh='\033[32m[ğŸš¬ğŸš¬@\n\033[35m:\w\033[32m]$\033[0m(ğŸ˜ŒğŸ’¨)'
cbstoned='\033[32m[_\|/_@\n\033[35m:\w\033[32m]$\033[0m(ğŸ˜³ğŸƒ)'
cbcooked='\033[32m[@\n\033[35m:\w\033[32m]$\033[0m(ğŸ˜¶ğŸ³)'
cbblazed='\033[32m[ğŸš¬_\|/_ğŸš¬@\n\033[35m:\w\033[32m]$\033[0m(ğŸ˜³ğŸ”¥)'
cbhexaling='\033[32m[_\|/_ğŸš¬@\n\033[35m:\w\033[32m]$\033[0m(ğŸ˜®ğŸ’¨)'
cbfaceclouds='\033[32m[ğŸš¬_\|/_ğŸš¬@\n\033[35m:\w\033[32m]$\033[0m(ğŸ˜¶ğŸŒ«ï¸)'



# UID 0 is the root user
if [[ $(id -u) -eq 0 ]];then
    # ps1 for root user
    PS1='ğŸ‘¿ [\u@\h \W]\$ '
else
    # ps1 for normal user
    #PS1='\u@\W\$'
    #PS1=$cbhigh
    expression=($cbhigh $cbbong $cbjoint $cbstoned $cbcooked $cbblazed $cbhexaling $cbfaceclouds)
    PS1=${expression[$RANDOM % ${#expression[@]} ]}
	
fi